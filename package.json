{
  "name": "ko-en-conversion",
	"displayName": "Ko-En conversion",
	"description": "한영 변환 도구 Korean-English conversion tool",
	"version": "0.1.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
        "onCommand:ko-en-conversion.conversion"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ko-en-conversion.conversion",
				"title": "한영 변환 (Ko-En Conversion)",
				"shortTitle": "한영 변환"
			}
		],
		"menus": {
			"editor/context": [
				{
					"group": "1_modification",
					"command": "ko-en-conversion.conversion"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.65.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
